<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= aarticle.title %>" type="text"  name="title" id="title" class="form-control">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= aarticle.description%></textarea>
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control mb-4"><%= aarticle.markdown %></textarea>
</div>
<a href="/articles" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary "  >save</button>
